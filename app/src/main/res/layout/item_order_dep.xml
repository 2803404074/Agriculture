<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@drawable/shape_white_noframe"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_depName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="朝阳店"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/colorGri2"
        android:textSize="@dimen/sp_15" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recy_sun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_3"></androidx.recyclerview.widget.RecyclerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮费"
                android:textColor="@color/colorGri2"
                android:textSize="@dimen/sp_13" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_kd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快递   免邮"
                android:textColor="@color/colorGri2"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_10"
            android:orientation="horizontal"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开具发票"
                android:textColor="@color/colorGri2"
                android:textSize="@dimen/sp_13" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_fp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="本次不具备开发票"
                android:textColor="@color/colorGri2"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单备注"
                android:textColor="@color/colorGri2"
                android:textSize="@dimen/sp_13" />

            <EditText
                android:id="@+id/et_mess"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="选填"
                android:paddingLeft="@dimen/dp_20"
                android:textColor="@color/colorGri2"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">

        <TextView
            android:id="@+id/tv_goodsNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="共1件" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="小计:"
            android:textColor="@color/colorGri2"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_money"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_depPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65.0"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>
</LinearLayout>
