<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/dp_5"
    android:paddingVertical="@dimen/dp_10">

    <com.shehuan.niv.NiceImageView
        android:id="@+id/nick_img"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_100"
        android:scaleType="centerCrop"
        android:src="@mipmap/test11"
        app:border_width="@dimen/dp_2"
        app:corner_radius="@dimen/dp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_5">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:text="【398顾问资格】+赠送20斤火龙果"
            android:textColor="@color/colorGri2"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_gg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_3"
            android:text="无敌水果无敌水果超级无敌水果" />


        <TextView
            android:id="@+id/tv_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_login_blue_no"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="包邮" />

        <View
            android:layout_width="1px"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_money"
                android:textColor="@color/colorOrange" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="398"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorOrange" />

            <TextView
                android:id="@+id/tv_payNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:text="100人付款"/>
            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="1px"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_dh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_2"
                android:textStyle="bold"
                android:background="@drawable/shape_login_orange"
                android:text="兑换"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>