<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGri"
    tools:context=".fragment.vip.activity.AddCartActivity">

    <include layout="@layout/toolbar_left_white_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_5"
        android:background="@drawable/shape_white_noframe"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:gravity="right"
                android:text="持卡人"/>
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="姓名"
                android:paddingLeft="@dimen/dp_10"
                android:background="@null"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginVertical="@dimen/dp_5"
            android:background="@color/colorGray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:gravity="right"
                android:text="卡号"/>
            <EditText
                android:id="@+id/et_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="银行卡号"
                android:inputType="number"
                android:paddingLeft="@dimen/dp_10"
                android:background="@null"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_nextx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_7"
        android:textSize="@dimen/sp_15"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/dp_40"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_green_to"
        android:text="下一步" />
</LinearLayout>