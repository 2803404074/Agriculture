<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_500"
    android:orientation="vertical"
    android:background="@drawable/shape_white_noframe"
    tools:context=".fragment.personal.activity.set.AboutAppActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择地址标签"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/colorGri2"
            android:layout_marginVertical="@dimen/dp_10"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_5"
            android:src="@drawable/smssdk_ic_popup_dialog_close"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_10"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/user"/>
        <EditText
            android:id="@+id/et_input"
            android:hint="默认显示姓名，可输入自定义标签"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_3"
            android:background="@drawable/shape_login_blue"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="家"
        android:paddingVertical="@dimen/dp_5"
        android:drawablePadding="@dimen/dp_5"
        android:paddingHorizontal="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableLeft="@mipmap/set_home"
        android:textStyle="bold"
        android:gravity="center|left"
        android:textSize="@dimen/sp_21"/>

    <TextView
        android:id="@+id/tv_gs"
        android:paddingVertical="@dimen/dp_5"
        android:drawablePadding="@dimen/dp_5"
        android:paddingHorizontal="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="公司"
        android:layout_marginVertical="@dimen/dp_20"
        android:drawableLeft="@mipmap/set_gs"
        android:textStyle="bold"
        android:gravity="center|left"
        android:textSize="@dimen/sp_21"/>

    <TextView
        android:id="@+id/tv_xx"
        android:paddingVertical="@dimen/dp_5"
        android:drawablePadding="@dimen/dp_5"
        android:paddingHorizontal="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学校"
        android:drawableLeft="@mipmap/set_school"
        android:textStyle="bold"
        android:gravity="center|left"
        android:textSize="@dimen/sp_21"/>
</LinearLayout>