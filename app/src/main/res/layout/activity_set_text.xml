<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGri"
    tools:context=".fragment.personal.activity.set.SetTextActivity">

    <include layout="@layout/toolbar_left_white"/>

    <EditText
        android:id="@+id/et_nickname"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:paddingVertical="@dimen/dp_15"
        android:paddingHorizontal="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:text="无法无天"/>


    <TextView
        android:id="@+id/tv_quit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:layout_marginVertical="@dimen/dp_20"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:gravity="center"
        android:textSize="@dimen/sp_15"
        android:textColor="@android:color/white"
        android:padding="@dimen/dp_7"
        android:background="@drawable/shape_login_blue"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:text="4-20个字符，可由中英、数字等组成"/>
</LinearLayout>