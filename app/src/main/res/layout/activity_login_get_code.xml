<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="info"
            type="String"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.personal.activity.LoginGetCodeActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号登陆"
                android:padding="5dp"
                android:textSize="18sp"
                android:textColor="@color/colorGri2"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_above="@+id/rl_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGri2"
                    android:textSize="16sp"
                    android:text="我们已将验证码发送至您" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGri2"
                    android:text="@{info}"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorGri2"
                    android:layout_height="wrap_content"
                    android:text="的手机，请注意查收。"/>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="100dp"
                android:layout_marginHorizontal="20dp">

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_recode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重新发送"
                    android:background="@drawable/shape_login_blue"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:padding="5dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_code_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:paddingVertical="10dp"
                android:layout_marginTop="50dp"
                android:textSize="21sp"
                android:text="确认"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                android:background="@drawable/shape_login_blue"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>


    </RelativeLayout>
</layout>