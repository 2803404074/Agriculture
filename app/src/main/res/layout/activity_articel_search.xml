<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.xiangc.activity.ArticelSearchActivity">
    <LinearLayout
        android:paddingRight="@dimen/dp_5"
        android:paddingVertical="@dimen/dp_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:padding="5dp"
            android:layout_gravity="center"
            android:src="@mipmap/back_black"/>
        <LinearLayout
            android:id="@+id/edit_father"
            android:layout_margin="5dp"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/broadcast_search_gray"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/start_search"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_25"
                android:padding="3dp"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/search"
                />
            <EditText
                android:id="@+id/search_edit"
                android:layout_width="0dp"
                android:inputType="text"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:imeOptions="actionSearch"
                android:hint="搜索"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_2"
            android:textColor="@color/colorOrange"
            android:background="@drawable/shape_login_orange_no"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/search_title"
        android:layout_below="@+id/tv_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门搜索"/>

        <com.tzl.agriculture.view.ShowButtonLayout
            android:id="@+id/hot_layout"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
        </com.tzl.agriculture.view.ShowButtonLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史搜索"/>
            <TextView
                android:id="@+id/tv_clea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/dp_5"
                android:text="清空"/>
        </LinearLayout>

        <com.tzl.agriculture.view.ShowButtonLayout
            android:id="@+id/history_layout"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
        </com.tzl.agriculture.view.ShowButtonLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_tips"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="什么都没找到~~~~"
        android:layout_marginVertical="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp_21"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryDark"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_recycler_view"
        android:layout_below="@+id/search_title"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
</LinearLayout>