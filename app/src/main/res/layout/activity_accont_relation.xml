<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGri"
    tools:context=".fragment.personal.activity.set.AccountRelationActivity">

    <include layout="@layout/toolbar_left_white"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_8"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:drawablePadding="@dimen/dp_5"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:drawableLeft="@drawable/xc"/>

        <TextView
            android:layout_toLeftOf="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未关联"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/dp_5"
            android:textSize="@dimen/sp_18" />
        <ImageView
            android:id="@+id/iv1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/back_black"
            android:rotation="180"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_8"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:drawableLeft="@drawable/xc"/>

        <TextView
            android:layout_toLeftOf="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未关联"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/dp_5"
            android:textSize="@dimen/sp_18" />
        <ImageView
            android:id="@+id/iv2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/back_black"
            android:rotation="180"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_8"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微博"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:drawableLeft="@drawable/xc"/>

        <TextView
            android:layout_toLeftOf="@+id/iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未关联"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/dp_5"
            android:textSize="@dimen/sp_18" />
        <ImageView
            android:id="@+id/iv3"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/back_black"
            android:rotation="180"/>
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/dp_10"
        android:text="账号关联之后，用户可以使用第三方账号进行快速登陆"/>
</LinearLayout>