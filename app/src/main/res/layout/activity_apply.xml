<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:descendantFocusability="blocksDescendants"
    tools:context=".fragment.vip.activity.ApplyActivity">

    <include layout="@layout/toolbar_left_white"
        android:id="@+id/topball"/>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/topball"
        android:background="@color/colorGri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_190"
                android:background="@mipmap/menber_beij">

                <ImageView
                    android:layout_above="@+id/ll_tag"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/sign" />


                <LinearLayout
                    android:id="@+id/ll_tag"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="@dimen/dp_30"
                    android:background="@mipmap/menber_bg"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_20">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="398 金牌顾问"
                            android:textStyle="bold"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/colorYellow" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="并成为"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="金牌顾问"
                                android:textStyle="bold"
                                android:textSize="@dimen/sp_15"
                                android:textColor="@color/colorYellow"/>
                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="多种权益 任您领取"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_white_noframe"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:paddingVertical="@dimen/dp_5"
                        android:text="立即开通"
                        android:textColor="@color/colorAccentButton"
                        android:textSize="@dimen/sp_9"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dp_5"
                android:background="@android:color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp_5"
                    android:textColor="@color/colorGri2"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:drawableTop="@mipmap/icon_sha"
                    android:layout_height="wrap_content"
                    android:text="分享有奖"/>
                <TextView
                    android:id="@+id/tv_yjsy"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp_5"
                    android:textColor="@color/colorGri2"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:drawableTop="@mipmap/icon_shouyi"
                    android:layout_height="wrap_content"
                    android:text="佣金收益"/>
                <TextView
                    android:id="@+id/tv_zszk"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp_5"
                    android:textColor="@color/colorGri2"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:drawableTop="@mipmap/icon_zhekou"
                    android:layout_height="wrap_content"
                    android:text="专属折扣"/>
                <TextView
                    android:id="@+id/tv_jmlb"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp_5"
                    android:textColor="@color/colorGri2"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:drawableTop="@mipmap/icon_gift"
                    android:layout_height="wrap_content"
                    android:text="精美礼包"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:background="@drawable/shape_white_noframe"
                android:paddingHorizontal="@dimen/dp_5"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:src="@mipmap/vip_cwxs"/>

                <View
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/colorGri"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recy_vip"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>