<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGri"
    tools:context=".mall.activity.OrderDetailsActivity">

    <include layout="@layout/toolbar_left_blue_left"/>

    <LinearLayout
        android:id="@+id/ll_add"
        android:layout_below="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:orientation="vertical"
        android:gravity="center|left"
        android:paddingHorizontal="@dimen/dp_20"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等待买家付款"
            android:textSize="@dimen/sp_18"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/tv_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:text="23小时39分钟后自动关闭订单"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/ll_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_below="@+id/title"
                android:id="@+id/or_is_address"
                android:layout_margin="10dp"
                android:paddingVertical="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp_5"
                android:background="@drawable/shape_white_noframe"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:padding="@dimen/dp_5"
                    android:layout_gravity="center"
                    android:src="@mipmap/position"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_adName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGri2"
                            android:textSize="@dimen/sp_18"
                            android:layout_gravity="center"
                            android:text="--"/>
                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="--"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGri2"
                        android:text="--"/>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/item_order_details_dep"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_qxdd"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_3"
            android:layout_marginHorizontal="@dimen/dp_3"
            android:background="@drawable/shape_login_whi_no"
            android:text="取消订单"/>

        <TextView
            android:id="@+id/tv_fk"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/shape_login_blue_no"
            android:text="去付款"/>
        <TextView
            android:id="@+id/tv_pj"
            android:visibility="gone"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_3"
            android:background="@drawable/shape_login_blue_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_3"
            android:textColor="@color/colorPrimaryDark"
            android:text="去评价"/>
        <TextView
            android:id="@+id/tv_ckwl"
            android:visibility="gone"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_3"
            android:background="@drawable/shape_login_whi_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看物流"/>

        <TextView
            android:id="@+id/tv_qrsh"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_3"
            android:background="@drawable/shape_login_whi_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认收货"/>
    </LinearLayout>


    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:SpinKit_Color="@color/colorPrimaryDark" />


</RelativeLayout>