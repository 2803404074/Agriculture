<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGri"
    tools:context=".mall.activity.OrderActivity">

    <include layout="@layout/toolbar_left_blue"
        android:id="@+id/title"/>
    <!--配送信息-->
    <LinearLayout
        android:layout_below="@+id/title"
        android:id="@+id/or_is_address"
        android:layout_margin="10dp"
        android:paddingVertical="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_5"
        android:background="@drawable/shape_white_noframe"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:padding="@dimen/dp_5"
            android:layout_gravity="center"
            android:src="@mipmap/position"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_adName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGri2"
                    android:textSize="@dimen/sp_18"
                    android:layout_gravity="center"
                    android:text=""/>
                <TextView
                    android:id="@+id/tv_ad_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_adAddress"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGri2"
                android:text=""/>
        </LinearLayout>
        <ImageView
            android:id="@+id/orther_set_address"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:padding="@dimen/dp_5"
            android:layout_gravity="center"
            android:rotation="180"
            android:src="@mipmap/back_black"
            />
    </LinearLayout>

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recy"
      android:layout_below="@+id/or_is_address"
      android:layout_above="@+id/ll_yhq"
      android:padding="@dimen/dp_5"
      android:layout_marginBottom="@dimen/dp_5"
      android:layout_marginHorizontal="@dimen/dp_10"
      android:background="@drawable/shape_white_noframe"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_yhq"
       android:layout_above="@+id/recy_yhq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/colorOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="我的优惠券："/>
        <TextView
            android:id="@+id/tv_yhq_status"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recy_yhq"
        android:layout_above="@+id/tv_youh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <!--原价及优惠-->
    <TextView
        android:id="@+id/tv_youh"
        android:layout_above="@+id/ll_bottom"
        android:layout_marginHorizontal="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_3"
        android:textSize="@dimen/sp_15"
        android:layout_gravity="center"
        android:textColor="@color/colorAccentButton"
        android:text="已优惠xxx元"/>

    <!--底部确认-->
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:paddingVertical="@dimen/dp_10"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:layout_gravity="center"
            android:text="合计:" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/colorOrange"
            android:text="@string/app_money"/>
        <TextView
            android:id="@+id/or_money_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorOrange"
            android:textSize="21sp"
            android:layout_gravity="center"
            android:text="0.0" />

        <TextView
            android:id="@+id/orther_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_login_blue"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"
            android:text="提交订单"
            android:textColor="#fff" />
    </LinearLayout>

    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:SpinKit_Color="@color/colorPrimaryDark" />
</RelativeLayout>