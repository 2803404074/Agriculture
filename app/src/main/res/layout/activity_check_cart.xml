<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGri"
    tools:context=".fragment.vip.activity.ChackCartActivity">

    <include layout="@layout/toolbar_left_white_left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:text="请选择银行卡类型"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:gravity="right"
                android:text="银行"/>
            <TextView
                android:id="@+id/tv_card"
                android:paddingHorizontal="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="请选择银行"
                android:gravity="center|left"
                android:textColor="#0238d2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginVertical="@dimen/dp_5"
            android:background="@color/colorGray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:gravity="right"
                android:text="类型"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="储蓄卡"
                android:paddingHorizontal="@dimen/dp_5"
                android:gravity="center|left"
                android:textColor="#0238d2" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:gravity="right"
            android:text="手机号"/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingHorizontal="@dimen/dp_5"
            android:hint="请输入该银行卡绑定的手机号"
            android:gravity="center|left" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorGri2"
        android:layout_margin="@dimen/dp_5"
        android:text="信息加密处理，仅用于银行卡验证"/>

    <CheckBox
        android:id="@+id/cb_check"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_marginVertical="@dimen/dp_20"
        android:text="同意《用户协议》"/>
    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_10"
        android:textSize="@dimen/sp_15"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/dp_40"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_green_to"
        android:text="下一步" />
</LinearLayout>