<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".main.WellcomActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:padding="@dimen/dp_5"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/sp_18"
           android:textColor="@color/colorGri2"
           android:layout_centerVertical="true"
           android:layout_centerHorizontal="true"
           android:text="确认付款"/>

       <ImageView
           android:id="@+id/iv_close"
           android:layout_width="@dimen/dp_30"
           android:layout_height="@dimen/dp_30"
           android:layout_alignParentRight="true"
           android:src="@drawable/smssdk_ic_popup_dialog_close"/>
   </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_28"
            android:textColor="@color/colorGri2"
            android:text="@string/app_money"/>
        <TextView
            android:id="@+id/tv_price"
            android:textSize="@dimen/sp_40"
            android:textColor="@color/colorGri2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65.10"/>
    </LinearLayout>

    <RelativeLayout
        android:padding="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:text="付款方式"/>

        <TextView
            android:layout_toLeftOf="@+id/iv_back_dialog"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_18"
            android:layout_height="wrap_content"
            android:text="微信支付"/>

        <ImageView
            android:id="@+id/iv_back_dialog"
            android:padding="@dimen/dp_5"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/back_black"
            android:rotation="180"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_zf"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:textSize="@dimen/sp_18"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付"/>
</LinearLayout>