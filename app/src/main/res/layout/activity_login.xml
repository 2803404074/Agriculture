<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.personal.login.activity.LoginActivity">


    <ImageView
        android:layout_above="@+id/rl_dq"
        android:layout_marginBottom="@dimen/dp_80"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:src="@mipmap/login_bg"/>
    <RelativeLayout
        android:id="@+id/rl_dq"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_above="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="国家/地区"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:id="@+id/tv_go"
            android:text="中国（+86）"/>
        <View
            android:layout_below="@+id/tv_go"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGri"
            />
    </RelativeLayout>
    <EditText
        android:layout_marginHorizontal="@dimen/dp_10"
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_above="@+id/tv_line"
        android:padding="10dp"
        android:lines="1"
        android:singleLine="true"
        android:maxLength="11"
        android:inputType="phone"
        android:hint="请输入您的手机号"/>
    <View
        android:id="@+id/tv_line"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:background="@color/colorGri"
        />
    <TextView
        android:id="@+id/tv_tips"
        android:visibility="gone"
        android:layout_below="@+id/tv_line"
        android:paddingHorizontal="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccentButton"
        android:text="该手机号未注册，请前往注册。"/>

    <LinearLayout
        android:layout_below="@+id/tv_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tv_next"
        android:background="@drawable/shape_login_blue_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:clickable="false"
        android:layout_marginHorizontal="50dp"
        android:paddingVertical="8dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="21sp"
        android:text="获取验证码" />
        <TextView
            android:id="@+id/tv_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:text="新用户注册"/>

        <View
            android:layout_width="1px"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/colorGri"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="其他登录方式"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/colorGri"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_wechat"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信登陆"
        android:drawableTop="@mipmap/wechat"
        android:textSize="21sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="登录即已同意《趣味乡村隐私政策》"/>
    </LinearLayout>

    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/colorPrimaryDark" />

</RelativeLayout>