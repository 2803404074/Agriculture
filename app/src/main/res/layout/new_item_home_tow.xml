<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_130"
    android:background="@android:color/white"
    android:layout_marginHorizontal="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:paddingHorizontal="@dimen/dp_2"
    android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/white"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_xsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_xsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="限时购"
                    android:lines="1"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#3F3F3F"/>
                <TextView
                    android:id="@+id/tv_xsg_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:lines="1"
                    android:layout_marginVertical="@dimen/dp_5"
                    android:text="感受他们的历史"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/tv_xsg_01"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="match_parent"
                    android:src="@mipmap/test20"/>
                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="match_parent"
                    android:background="@color/colorGri"/>
                <ImageView
                    android:id="@+id/tv_xsg_02"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="match_parent"
                    android:src="@mipmap/test21"/>
            </LinearLayout>
        </LinearLayout>

    <View
        android:layout_width="@dimen/dp_8"
        android:layout_height="match_parent"
        android:background="@color/colorGri"/>
        <LinearLayout
            android:id="@+id/ll_ptjx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@android:color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_pt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拼团惊喜"
                android:lines="1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#3F3F3F"/>
            <TextView
                android:id="@+id/tv_pt_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_marginVertical="@dimen/dp_5"
                android:ellipsize="end"
                android:textSize="12sp"
                android:text="感受他们的历史"/>
            <ImageView
                android:id="@+id/iv_pt_img"
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent"
                android:src="@mipmap/test22"/>
        </LinearLayout>
    <View
        android:layout_width="@dimen/dp_2"
        android:layout_height="match_parent"
        android:background="@color/colorGri"/>
        <LinearLayout
            android:id="@+id/ll_tjyh"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_tj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特价特价"
                android:lines="1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#3F3F3F"/>
            <TextView
                android:id="@+id/tv_tj_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_marginVertical="@dimen/dp_5"
                android:ellipsize="end"
                android:textSize="12sp"
                android:text="感受他们的历史"/>
            <ImageView
                android:id="@+id/iv_tj_img"
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent"
                android:src="@mipmap/test23"/>
        </LinearLayout>
</LinearLayout>
