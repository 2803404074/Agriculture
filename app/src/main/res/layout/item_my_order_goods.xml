<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginVertical="@dimen/dp_2"
    android:background="@drawable/shape_white_noframe"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@mipmap/test1"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:paddingHorizontal="@dimen/dp_5"
            android:layout_toLeftOf="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGri2"
            android:textSize="@dimen/sp_14"
            android:lines="2"
            android:ellipsize="end"
            android:text="就得啦得啦的贷款就得啦得啦的贷款大大阿达阿达的"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥65.10"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:layout_below="@+id/tv_title"
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1"
            android:layout_alignParentRight="true"
            />


        <TextView
            android:id="@+id/tv_gg"
            android:paddingHorizontal="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大果/礼盒包装/1斤装"
            android:layout_below="@+id/tv_title"/>
    </RelativeLayout>
</LinearLayout>
